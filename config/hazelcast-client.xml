<hazelcast-client xsi:schemaLocation="http://www.hazelcast.com/schema/client-config
            http://www.hazelcast.com/schema/client-config/hazelcast-client-config-3.3.xsd"
                  xmlns="http://www.hazelcast.com/schema/client-config"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <serialization>
        <portable-factories>
            <portable-factory factory-id="100">org.rakam.cache.hazelcast.hyperloglog.client.HyperLogLogPortableFactory</portable-factory>
            <portable-factory factory-id="103">org.rakam.cache.hazelcast.treemap.client.TreeMapPortableFactory</portable-factory>
        </portable-factories>
        <data-serializable-factories>
            <data-serializable-factory factory-id="1">org.rakam.cache.hazelcast.RakamDataSerializableFactory</data-serializable-factory>
        </data-serializable-factories>
    </serialization>

    <proxy-factories>
        <proxy-factory service="rakam:hyperLogLogService"
                       class-name="org.rakam.cache.hazelcast.hyperloglog.client.ClientHyperLogLogProxyFactory"></proxy-factory>
        <proxy-factory service="rakam:treeSetService"
                       class-name="org.rakam.cache.hazelcast.treeset.ClientTreeSetProxyFactory"></proxy-factory>
    </proxy-factories>
</hazelcast-client>